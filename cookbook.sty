\newcommand\fullpageimage[1]{
    \newgeometry{margin=0in}
    \begin{figure}[p]
        \centering
        \includegraphics[width=\paperwidth,height=\paperheight]{#1}
        \caption{Caesar Salad}
    \end{figure}
    \restoregeometry
    \clearpage
}

\newcommand\ingredients[1]{
    \sffamily
    \bfseries
    \vspace{1em}
    \begin{tabular}{r@{ }l}
        #1
    \end{tabular}
    \vspace{1em}
    \mdseries
}

\newenvironment{recipe} {
    \begin{multicols*}{3}
}{
    \end{multicols*}
    \clearpage
}

\newcommand\pre[1]{
    \begin{framed}
        #1
    \end{framed}
}

\newcommand\tip[1]{
    \vspace{1em}
    \it{#1}
}

